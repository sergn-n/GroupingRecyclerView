<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:drawable="@drawable/item_pressed" />
    <!--android:state_checked="true",
        android:state_activated="true"
        android:state_selected="true"
      are never displayed.
      -->
    <item
        android:state_pressed="false"
        android:state_checked="true"
        android:drawable="@drawable/item_checked" />
    <item
        android:state_pressed="false"
        android:state_activated="true"
        android:drawable="@drawable/item_activated" />
    <item
        android:state_pressed="false"
        android:state_selected="true"
        android:drawable="@drawable/item_selected" />
    <!--android:state_focused="true"
      is displayed when item is selected by keypad Up/Down
      Click will display item_default
      -->
    <item
        android:state_pressed="false"
        android:state_focused="true"
        android:drawable="@drawable/item_focused" />

    <item
        android:drawable="@drawable/item_default" />
</selector>